# ðŸš€ ULTIMATE GROUP KING BOT - ENVIRONMENT VARIABLES
# Copy this file to .env and fill in your values

# === REQUIRED ===
TELEGRAM_BOT_TOKEN=your_bot_token_here
OWNER_ID=123456789

# === DATABASE ===
DATABASE_URL=sqlite:///data/bot.db
# For PostgreSQL:
# DATABASE_URL=postgresql://bot_user:bot_password@postgres:5432/bot_db
POSTGRES_DB=bot_db
POSTGRES_USER=bot_user
POSTGRES_PASSWORD=bot_password

# === AI FEATURES ===
OPENROUTER_API_KEY=sk-or-v1-your_openrouter_api_key
# Get from: https://openrouter.ai/

# === OPTIONAL APIS ===
OPENWEATHER_API_KEY=your_openweather_api_key
# Get from: https://openweathermap.org/api

# === WEB DASHBOARD ===
WEB_DASHBOARD_ENABLED=True
FLASK_SECRET_KEY=your_flask_secret_key_here
WEB_HOST=0.0.0.0
WEB_PORT=8080

# === REDIS CACHE (Optional) ===
REDIS_URL=redis://redis:6379/0
# For local Redis:
# REDIS_URL=redis://localhost:6379/0

# === LOGGING ===
LOG_LEVEL=INFO
LOG_FILE=logs/bot.log

# === DEVELOPMENT ===
DEBUG=False
TESTING=False
MOCK_API=False

# === PERFORMANCE ===
MAX_WORKERS=4
CACHE_TTL=3600
RATE_LIMIT=100

# === SECURITY ===
ALLOWED_HOSTS=*
CORS_ORIGINS=*
BACKUP_PASSWORD=your_backup_password

# === BACKUP ===
AUTO_BACKUP=True
BACKUP_INTERVAL=86400
MAX_BACKUPS=7

# === AI SETTINGS ===
AI_MAX_TOKENS=150
AI_TEMPERATURE=0.9
AI_TIMEOUT=60

# === WEBHOOK ===
WEBHOOK_ENABLED=False
WEBHOOK_URL=https://yourdomain.com/webhook
WEBHOOK_PORT=8443
WEBHOOK_CERT=path/to/cert.pem
WEBHOOK_KEY=path/to/key.pem

# === DOCKER ===
DOCKER_ENVIRONMENT=False

# === MONITORING ===
GRAFANA_PASSWORD=admin
PROMETHEUS_RETENTION=200h

# === RATE LIMITING ===
API_RATE_LIMIT=10
LOGIN_RATE_LIMIT=1

# === FILE LIMITS ===
MAX_MESSAGE_LENGTH=4096
MAX_CAPTION_LENGTH=1024
MAX_FILE_SIZE_MB=20
MAX_UPLOAD_SIZE_MB=50

# === EXP SYSTEM ===
EXP_PER_MESSAGE=10
EXP_PER_COMMAND=5
ADMIN_EXP_THRESHOLD=500

# === MAINTENANCE ===
MAINTENANCE_MODE=False
MAINTENANCE_MESSAGE="Bot is under maintenance. Please try again later."

# === NOTIFICATIONS ===
ERROR_NOTIFICATIONS=True
OWNER_NOTIFICATION_EMAIL=your_email@example.com

# === ANALYTICS ===
ENABLE_ANALYTICS=False
ANALYTICS_TOKEN=your_analytics_token
